{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "incremental": true,
        "strict": true,

        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "sourceMap": true,

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,

        "baseUrl": "./src-server",
        "paths": {
            "*": ["../node_modules/*"],
            "@server/*": ["./*"]
          },
        "outDir": "./build",
    },
    "include": [
        "src-server/**/*"
    ]
}